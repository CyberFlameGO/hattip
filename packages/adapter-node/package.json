{
  "name": "@hattip/adapter-node",
  "version": "0.0.1",
  "description": "Node.js adapter for Hattip",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./simple-server": {
      "import": "./dist/simple-server.mjs",
      "require": "./dist/simple-server.js"
    },
    "./full-stack-server": {
      "import": "./dist/full-stack-server.mjs",
      "require": "./dist/full-stack-server.js"
    }
  },
  "author": "Fatih Ayg√ºn <cyco130@gmail.com>",
  "repository": "https://github.com/cyco130/vavite",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "test": "pnpm test:typecheck && pnpm test:lint",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0 --ignore-pattern dist"
  },
  "devDependencies": {
    "@cyco130/eslint-config": "^1.0.0",
    "@hattip/core": "workspace:*",
    "@types/node": "^17.0.23",
    "eslint": "^8.12.0",
    "node-fetch": "^3.2.3",
    "sirv": "^2.0.2",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3"
  }
}
